{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "strict": true
  },
  "include": [
    "src",
    "src/generated/**/*.ts",
    "src/generated/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
