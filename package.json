{
  "name": "nv",
  "version": "1.0.0",
  "description": "nv",
  "main": "electron/main.js",
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently -k \"npm run dev:backend\" \"npm run dev:frontend\" \"cross-env NODE_ENV=development electron .\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build": "npm run build:frontend && npm run build:backend",
    "start:prod": "npm run build && cross-env NODE_ENV=production electron .",
    "package": "npm run build && cross-env NODE_ENV=production electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.example.nv",
    "productName": "nv",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "electron/**/*",
      "backend/dist/**/*",
      "backend/node_modules/**/*",
      "backend/package.json",
      "frontend/dist/**/*",
      "package.json"
    ],
    "extraResources": [],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
